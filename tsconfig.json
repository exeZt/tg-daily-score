{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "outFile": "dist/index.js",
    "declaration": true,
    "declarationDir": "dist/types",
    "experimentalDecorators": true,
  },
  "include": ["src/**/*"],
}
